{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
    ],
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": [
        "./src/*",
      ],
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "noEmit": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "./.next/types/**/*.ts",
    "./build/types/**/*.ts",
    "./src",
    ".next/types/**/*.ts",
    "build/types/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./src/core/**",
  ],
}
